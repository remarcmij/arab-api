  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build-watch": "tsc --watch",
    "start": "node dist/index.js",
    "server": "cross-env NODE_ENV=development nodemon --watch ./dist --watch ./locales dist/index.js",
    "server-debug": "cross-env NODE_ENV=development nodemon --inspect --watch ./dist --watch ./locales dist/index.js",
    "client": "npm start --prefix arab-client",
    "dev": "concurrently \"npm run build-watch\" \"npm run server\" \"npm run client\"",
    "dev-debug": "concurrently \"npm run build-watch\" \"npm run server-debug\" \"npm run client\"",
    "cleardb": "node dist/cleardb",
    "test": "jest",
    "lint": "eslint --ext=jsx,ts,tsx src"
  },
